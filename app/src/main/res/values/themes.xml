<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Swapify" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_gray</item>
        <item name="colorPrimaryVariant">@color/main_gray</item>
        <item name="colorOnPrimary">@color/sub_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_green</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="titleTextColor">@color/sub_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_gray</item>
        <item name="android:navigationBarColor">@color/main_gray</item>
        <item name="android:textColorPrimary">@color/main_gray</item>
        <!-- Customize your theme here. -->
        <item name="android:activatedBackgroundIndicator">@drawable/selected</item>
        <item name="android:windowBackground">@color/main_green</item>
    </style>

    <style name="Theme.Switch" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/main_gray</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/sub_green</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/main_green</item>

        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="android:textStyle">bold</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

    </style>

</resources>